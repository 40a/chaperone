#!/usr/bin/env expect-test-command
#TITLE: inetd - second service disables both

# Start the image and capture the container ID and port
# (Note: the initial "echo" below is needed to take care of a timing issue with 'docker run')

>echo running...; echo CID:`RUNIMAGE_READY -d -P -e ENABLE_INETD1=true -e ENABLE_INETD2=true`
+$cid=CID:([0-9a-f]{32,})
>docker port $cid
+$ourport=8080/tcp -> 0.0.0.0:([0-9]+)
>docker port $cid
+$otherport=8443/tcp -> 0.0.0.0:([0-9]+)

# Fire up an inetd connection inside the container and verify it works (ready assured)

>read_from_port localhost $ourport
<hello from port 8080

# Second call causes container termination
>sleep 2
>read_from_port localhost $otherport

# Kill and inspect logs

>sleep 3
>docker logs $cid
<inetd1.service listening on port 8080
<inetd2.service listening on port 8443
<received connection on port 8080
<system will remain active since there are scheduled services
<received connection on port 8443
<no child processes present
<Final termination phase

# Clean up

>docker rm -v $cid
